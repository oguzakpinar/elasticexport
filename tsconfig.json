{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "rootDir": "src",
        "outDir": "./lib",
        "strict": true,
        "lib": ["es2015"],
        "types": [
            "node"
        ],
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/*"
    ]
}